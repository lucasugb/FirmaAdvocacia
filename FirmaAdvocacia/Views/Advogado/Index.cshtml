@model IEnumerable<FirmaAdvocacia.Models.Advogado>

@{
    ViewData["Title"] = "Advogados";
}

<h1>Advogados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OAB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th>Processos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OAB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
            <td>
                @if (item.AdvogadosProcessos != null && item.AdvogadosProcessos.Any())
                {
                    foreach (var cp in item.AdvogadosProcessos)
                    {
                        @cp.ProcessoOrigem?.Tipo <br />
                    }
                }
                else
                {
                    <i>Nenhum</i>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdvogadoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdvogadoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdvogadoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
